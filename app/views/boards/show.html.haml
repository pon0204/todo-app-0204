.container
  %h2 Branket
  - @tasks.each do|task|
    = link_to board_task_path(@board,task) do
      .card
        .card_yohaku    
        　　　　　
        - if task.eyecatch.attached?
          .card_eyecatch
            = image_tag task.eyecatch 
        .card_name
          = task.title
        .card_description
          = task.content
        .card_detail
          = image_tag task.user.avatar_image
        .card_message
          %p 23
          = image_tag 'message.png'

  .card_add
    = link_to '+ Add new card ', new_board_task_path(@board) 
      